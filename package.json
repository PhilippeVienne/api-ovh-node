{
  "author": "uriel Chemouni",
  "description": "Api Ovh helper",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/*",
    "common",
    "sample"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^11.13.10",
    "lerna": "^3.13.1",
    "rimraf": "^2.6.3",
    "typescript": "^3.4.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UrielCh/api-ovh-node.git"
  },
  "scripts": {
    "clean": "rimraf ./packages/*/src ./packages/*/dist ./packages/*/yarn-error.log  **/index.d.ts **/index.js",
    "clean2": "lerna clean -y",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "publish": "lerna run tsc && lerna publish",
    "prepublish": "lerna run yarn run lint && lerna run yarn run test && lerna run yarn run build"
  }
}
